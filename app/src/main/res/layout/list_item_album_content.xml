<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="theme"
      type="androidx.lifecycle.LiveData&lt;hu.mrolcsi.muzik.data.model.theme.Theme&gt;" />

    <variable
      name="item"
      type="android.support.v4.media.MediaBrowserCompat.MediaItem" />
  </data>

  <merge tools:showIn="@layout/list_item_album_horizontal">

    <ImageView
      android:id="@+id/imgCoverArt"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:adjustViewBounds="true"
      android:contentDescription="@string/contentDescription_coverArt"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toTopOf="@+id/tvAlbumTitle"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

    <TextView
      android:id="@+id/tvAlbumTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:maxLines="1"
      android:textAppearance="?attr/textAppearanceListItem"
      android:textColor="@{theme.primaryForegroundColor}"
      app:enableMarquee="@{true}"
      app:layout_constraintBottom_toTopOf="@+id/tvAlbumArtist"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imgCoverArt"
      app:marqueeDelay="@{@integer/preferredMarqueeDelay}"
      tools:text="Album Title" />

    <TextView
      android:id="@+id/tvAlbumArtist"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:alpha="0.8"
      android:maxLines="1"
      android:textAppearance="?attr/textAppearanceListItemSecondary"
      android:textColor="@{theme.primaryForegroundColor}"
      app:enableMarquee="@{true}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvAlbumTitle"
      app:layout_constraintVertical_bias="0.5"
      app:marqueeDelay="@{@integer/preferredMarqueeDelay}"
      tools:text="Album Artist" />

  </merge>

</layout>