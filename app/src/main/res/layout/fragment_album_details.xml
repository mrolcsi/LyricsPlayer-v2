<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="viewModel"
      type="hu.mrolcsi.muzik.library.albums.details.AlbumDetailsViewModel" />

    <variable
      name="theme"
      type="androidx.lifecycle.LiveData&lt;hu.mrolcsi.muzik.theme.Theme&gt;" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@{theme.secondaryBackgroundColor}"
    android:fitsSystemWindows="true"
    tools:context=".library.albums.details.AlbumDetailsFragment"
    tools:ignore="MergeRootFrame">

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@{theme.primaryBackgroundColor}"
      android:fitsSystemWindows="true"
      android:stateListAnimator="@animator/appbar_elevation"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

      <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:collapsedTitleTextColor="@{theme.primaryForegroundColor}"
        app:contentScrim="@{theme.primaryBackgroundColor}"
        app:expandedTitleMarginEnd="16dp"
        app:expandedTitleMarginStart="@dimen/expanded_title_margin_start"
        app:expandedTitleTextColor="@{theme.primaryForegroundColor}"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:scrimAnimationDuration="@integer/preferredAnimationDuration">

        <include
          android:id="@+id/backdrop"
          layout="@layout/album_details_header"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layout_collapseMode="parallax"
          app:theme="@{theme}"
          app:viewModel="@{viewModel}" />

        <com.google.android.material.appbar.MaterialToolbar
          android:id="@+id/albumDetailsToolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:iconTint="@{theme.primaryForegroundColor}"
          app:layout_collapseMode="pin"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          app:title="@{viewModel.albumTitleText}" />

      </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- https://stackoverflow.com/questions/34181372/coordinatorlayout-inside-another-coordinatorlayout -->

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvSongs"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:dividerColor="@{theme.secondaryForegroundColor}"
      app:dividerDrawable="@{@drawable/list_divider_inset}"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_behavior=".common.view.FabAwareScrollingViewBehavior"
      app:showColoredDivider="@{true}"
      tools:listitem="@layout/list_item_song" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fabShuffleAll"
      style="@style/Widget.MaterialComponents.FloatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:backgroundTint="@{theme.primaryBackgroundColor}"
      android:contentDescription="@string/mediaControl_shuffleAll"
      android:onClick="@{() -> viewModel.onShuffleAllClick()}"
      android:tint="@{theme.primaryForegroundColor}"
      app:rippleColor="@{theme.primaryForegroundColor}"
      app:srcCompat="@drawable/ic_shuffle_all" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>