<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="viewModel"
      type="hu.mrolcsi.muzik.library.albums.details.AlbumDetailsViewModel" />

    <variable
      name="theme"
      type="androidx.lifecycle.LiveData&lt;hu.mrolcsi.muzik.theme.Theme&gt;" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@{theme.secondaryBackgroundColor}"
    android:fitsSystemWindows="true"
    tools:context=".library.albums.details.AlbumDetailsFragment"
    tools:ignore="MergeRootFrame">

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@{theme.primaryBackgroundColor}"
      android:fitsSystemWindows="true"
      android:stateListAnimator="@animator/appbar_elevation"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

      <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsingToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:collapsedTitleTextColor="@{theme.primaryForegroundColor}"
        app:contentScrim="@{theme.primaryBackgroundColor}"
        app:expandedTitleMarginEnd="16dp"
        app:expandedTitleMarginStart="@dimen/expanded_title_margin_start"
        app:expandedTitleTextColor="@{theme.primaryForegroundColor}"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:scrimAnimationDuration="@integer/preferredAnimationDuration">

        <include
          android:id="@+id/backdrop"
          layout="@layout/album_details_header"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layout_collapseMode="parallax"
          app:theme="@{theme}"
          app:viewModel="@{viewModel}" />

        <com.google.android.material.appbar.MaterialToolbar
          android:id="@+id/albumDetailsToolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:layout_collapseMode="pin"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          app:title="@{viewModel.albumTitleText}" />

      </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- https://stackoverflow.com/questions/34181372/coordinatorlayout-inside-another-coordinatorlayout -->

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvSongs"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingBottom="?attr/actionBarSize"
      app:dividerColor="@{theme.secondaryForegroundColor}"
      app:dividerDrawable="@{@drawable/list_divider_inset}"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
      app:showColoredDivider="@{true}"
      tools:listitem="@layout/list_item_song" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>