<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="theme"
      type="androidx.lifecycle.LiveData&lt;hu.mrolcsi.muzik.data.model.theme.Theme&gt;" />

    <variable
      name="viewModel"
      type="hu.mrolcsi.muzik.ui.artistDetails.ArtistDetailsViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <ImageView
      android:id="@+id/imgArtist"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:contentDescription="@string/contentDescription_artistPicture"
      android:scaleType="fitCenter"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/transparent"
      tools:srcCompat="@tools:sample/avatars" />

    <ImageView
      android:id="@+id/imgProtectionScrimBottom"
      android:layout_width="0dp"
      android:layout_height="24dp"
      android:tint="@{theme.backgroundColor}"
      app:layout_constraintBottom_toBottomOf="@id/imgArtist"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/imgArtist"
      app:srcCompat="@drawable/protection_scrim"
      tools:ignore="ContentDescription"
      tools:tint="?attr/colorPrimary" />

    <TextView
      android:id="@+id/tvTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:ellipsize="end"
      android:gravity="center"
      android:text="@{viewModel.artistName}"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textColor="@{theme.foregroundColor}"
      android:textStyle="bold"
      app:layout_constrainedHeight="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imgArtist"
      tools:text="@tools:sample/lorem[9]" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fabShuffleAll"
      style="@style/Widget.MaterialComponents.FloatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:backgroundTint="@{theme.foregroundColor}"
      android:contentDescription="@string/mediaControl_shuffleAll"
      android:onClick="@{() -> viewModel.onShuffleAllClick()}"
      android:tint="@{theme.backgroundColor}"
      app:layout_anchorGravity="bottom|end"
      app:layout_constraintBottom_toBottomOf="@+id/imgArtist"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imgArtist"
      app:rippleColor="@{theme.backgroundColor}"
      app:srcCompat="@drawable/ic_shuffle_all" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>