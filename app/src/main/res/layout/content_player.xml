<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/playerRoot"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  tools:context=".player.PlayerActivity">

  <ImageView
    android:id="@+id/imgCoverArt0"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:scaleType="centerCrop"
    android:transitionName="coverArt"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@tools:sample/avatars"/>

  <!--<ImageView-->
  <!--android:id="@+id/imgCoverArt1"-->
  <!--android:layout_width="0dp"-->
  <!--android:layout_height="0dp"-->
  <!--android:scaleType="centerCrop"-->
  <!--android:transitionName="coverArt"-->
  <!--app:layout_constraintDimensionRatio="1:1"-->
  <!--app:layout_constraintEnd_toEndOf="parent"-->
  <!--app:layout_constraintStart_toStartOf="parent"-->
  <!--app:layout_constraintTop_toTopOf="parent"-->
  <!--tools:src="@tools:sample/avatars"/>-->

  <!-- Make sure Toolbar is above the Cover Art -->
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/playerToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/action_bar_elevation"
    android:minHeight="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme"
    app:elevation="@dimen/action_bar_elevation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="@dimen/action_bar_elevation"
    android:textAlignment="center"
    android:textAppearance="?android:attr/textAppearanceLarge"
    app:elevation="@dimen/action_bar_elevation"
    app:layout_constraintBottom_toTopOf="@+id/tvArtist"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imgCoverArt0"
    app:layout_constraintVertical_chainStyle="packed"
    tools:text="Title"/>

  <TextView
    android:id="@+id/tvArtist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:alpha="0.7"
    android:elevation="@dimen/action_bar_elevation"
    android:textAlignment="center"
    android:textAppearance="?android:attr/textAppearanceMedium"
    app:elevation="@dimen/action_bar_elevation"
    app:layout_constraintBottom_toTopOf="@+id/tvAlbum"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
    tools:text="Artist"/>

  <TextView
    android:id="@+id/tvAlbum"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:alpha="0.7"
    android:elevation="@dimen/action_bar_elevation"
    android:textAlignment="center"
    app:elevation="@dimen/action_bar_elevation"
    app:layout_constraintBottom_toTopOf="@+id/sbSongProgress"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvArtist"
    tools:text="Album"/>

  <SeekBar
    android:id="@+id/sbSongProgress"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:enabled="false"
    app:layout_constraintBottom_toTopOf="@+id/btnPlayPause"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"/>

  <TextView
    android:id="@+id/tvElapsedTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:alpha="0.7"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sbSongProgress"
    tools:text="01:23"/>

  <TextView
    android:id="@+id/tvRemainingTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:alpha="0.7"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/sbSongProgress"
    tools:text="-02:11"/>

  <TextView
    android:id="@+id/tvSeekProgress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#990e0e0e"
    android:elevation="@dimen/bottom_navigation_elevation"
    android:minWidth="120dp"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:textColor="?android:attr/textColorPrimary"
    android:typeface="monospace"
    android:visibility="gone"
    app:elevation="@dimen/bottom_navigation_elevation"
    app:layout_constraintBottom_toBottomOf="@+id/imgCoverArt0"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="01:24"
    tools:visibility="visible"/>

  <ImageButton
    android:id="@+id/btnPrevious"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/media_button_background"
    android:contentDescription="@string/mediaControl_previous"
    android:elevation="@dimen/button_elevation"
    android:enabled="false"
    android:scaleType="fitCenter"
    app:elevation="@dimen/button_elevation"
    app:layout_constraintBottom_toBottomOf="@+id/btnPlayPause"
    app:layout_constraintEnd_toStartOf="@+id/btnPlayPause"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/btnPlayPause"
    app:srcCompat="@android:drawable/ic_media_previous"
    tools:visibility="visible"/>

  <ImageButton
    android:id="@+id/btnPlayPause"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_marginBottom="32dp"
    android:background="@drawable/media_button_background"
    android:contentDescription="@string/mediaControl_playPause"
    android:elevation="@dimen/button_elevation"
    android:enabled="false"
    android:scaleType="fitCenter"
    app:elevation="@dimen/button_elevation"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/btnNext"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/btnPrevious"
    app:srcCompat="@android:drawable/ic_media_play"/>

  <ImageButton
    android:id="@+id/btnNext"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/media_button_background"
    android:contentDescription="@string/mediaControl_next"
    android:elevation="@dimen/button_elevation"
    android:enabled="false"
    android:scaleType="fitCenter"
    app:elevation="@dimen/button_elevation"
    app:layout_constraintBottom_toBottomOf="@+id/btnPlayPause"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/btnPlayPause"
    app:layout_constraintTop_toTopOf="@+id/btnPlayPause"
    app:srcCompat="@android:drawable/ic_media_next"
    tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>