<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="theme"
      type="hu.mrolcsi.muzik.theme.Theme" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/imgCoverArt"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:contentDescription="@string/contentDescription_coverArt"
      android:elevation="@dimen/action_bar_elevation"
      android:scaleType="centerCrop"
      app:elevation="@dimen/action_bar_elevation"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars" />

    <TextView
      android:id="@+id/tvTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:textAlignment="center"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textColor="@{theme.primaryForegroundColor}"
      app:enableMarquee="@{true}"
      app:layout_constraintBottom_toTopOf="@+id/tvArtist"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imgCoverArt"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.3"
      app:layout_constraintVertical_chainStyle="packed"
      app:marqueeDelay="@{@integer/preferredMarqueeDelay}"
      tools:text="Title" />

    <TextView
      android:id="@+id/tvArtist"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:alpha="0.8"
      android:textAlignment="center"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="@{theme.primaryForegroundColor}"
      app:enableMarquee="@{true}"
      app:layout_constraintBottom_toTopOf="@+id/tvAlbum"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imgCoverArt"
      app:layout_constraintTop_toBottomOf="@+id/tvTitle"
      app:marqueeDelay="@{@integer/preferredMarqueeDelay}"
      tools:text="Artist" />

    <TextView
      android:id="@+id/tvAlbum"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:alpha="0.8"
      android:textAlignment="center"
      android:textColor="@{theme.primaryForegroundColor}"
      app:enableMarquee="@{true}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imgCoverArt"
      app:layout_constraintTop_toBottomOf="@+id/tvArtist"
      app:marqueeDelay="@{@integer/preferredMarqueeDelay}"
      tools:text="Album" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>